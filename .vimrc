" For plugins to load correctly
filetype plugin indent on

" Turn on syntax highlighting
syntax on

" Show line numbers
set number

" Encoding
" set encoding=utf-8

" Whitespace
set wrap
set formatoptions=tcqrn1
set tabstop=2
set shiftwidth=2
set softtabstop=2
set expandtab
set noshiftround

" Status bar
set laststatus=2

" vim-terraform
let g:terraform_fmt_on_save=1
